<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | 比價網</title>
    <link rel="stylesheet" href="~/css/bootswatch.css" />
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PriceCompartor.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar fixed-top navbar-expand-lg navbar-toggleable-lg bg-primary border-bottom box-shadow mb-3" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PriceCompartor</a>
                <form class="form-inline d-flex" data-bs-theme="light" action="@Url.Action("", "Search", System.Web.HttpUtility.UrlEncode(@ViewData["keyword"]?.ToString()))" method="get">
                    <input class="form-control" type="search" name="keyword" placeholder="Search" aria-label="Search" value=@ViewData["keyword"]?.ToString()>
                    <button class="btn btn-primary" type="submit">Search</button>
                </form>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @Html.ActionLink("首頁", "Index", "Home", new { area = "" }, new { @class = $"nav-link{(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? " active" : "" )}"})
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("排行榜", "Rank", "Home", new { area = "" }, new { @class = $"nav-link{(ViewContext.RouteData.Values["Action"]?.ToString() == "Rank" ? " active" : "")}" })
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">後台</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3" style="padding-top: 77px;">
            <div class="row">
                @if (!string.Equals(ViewContext.RouteData.Values["area"] as string, "Identity", System.StringComparison.OrdinalIgnoreCase)) {
                    <div class="col-lg-3">
                        <vc:small-cart />

                        <vc:filter />

                        <vc:categories />
                    </div>
                }
                <div class="col">
                    <partial name="_NotificationPartial" />
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - PriceCompartor - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
