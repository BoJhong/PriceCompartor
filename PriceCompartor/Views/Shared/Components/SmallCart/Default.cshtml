@model SmallCartViewModel
<div class="bg-primary mb-3 p-3 text-white rounded">
    @if (Model != null)
    {
        <p>Items in cart: @Model.NumberOfItems</p>
        <p>Total: <b>@Model.TotalAmount.ToString("C0")</b></p>
        <div class="btn-group w-100">
            <a class="btn btn-warning" asp-controller="Cart" asp-action="Index">View Cart</a>
            <a class="btn btn-danger" asp-controller="Cart" asp-action="Clear">Clear Cart</a>
        </div>
    }
    else
    {
        <p class="lead m-0">Your cart is empty</p>
    }
</div>
