@model FilterViewModel
<div class="text-bg-light mb-3 p-3 rounded">
    <form method="get">
        <div class="form-group">
            <label class="form-label">排序</label>
            <select class="form-control" name="sort">
                @foreach (OrderByType orderByType in Enum.GetValues(typeof(OrderByType)))
                {
                    <option value="@orderByType">@OrderByTypeHelper.GetDisplayName(orderByType)</option>
                }
            </select>
        </div>

        <div class="form-group mt-2">
            <label class="form-label">平台</label>
            <ul class="list-group">
                @foreach (var platform in Model.FilterOptions.Platforms)
                {
                    <li class="list-group-item user-select-none">
                        <img src="@platform.ImageSrc" width="31" class="object-fit-cover rounded" />
                        <input type="checkbox" id="@platform.Id" @(platform.filterEnabled ? "checked" : "")>
                        <label for="@platform.Id">@platform.Name</label>
                    </li>
                }
            </ul>
        </div>

        <div class="form-group mt-2">
            <button class="btn btn-primary btn-sm" action="submit">套用</button>
        </div>
    </form>
</div>
