@model PriceCompartor.Models.Product

@{
    ViewData["Title"] = "Sort Uncategorized Products";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <form asp-action="Sort">
        <input type="hidden" asp-asp-for="Id" />
        <div class="col-md-4">
            <div class="form-group mt-2">
                <input type="submit" value="Sort" class="btn btn-info" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </form>
</div>
