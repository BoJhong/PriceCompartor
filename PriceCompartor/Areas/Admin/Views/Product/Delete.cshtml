@model PriceCompartor.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <form asp-action="Delete">
        <input type="hidden" asp-asp-for="Id" />
            <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" readonly />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" readonly></textarea>
            </div>
            <div class="form-group mt-2">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" class="form-control" readonly />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" readonly />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Link" class="control-label"></label>
                <input asp-for="Link" class="form-control" readonly />
            </div>
            <div class="form-group mt-2">
                <label asp-for="Sales" class="control-label"></label>
                <input asp-for="Sales" class="form-control" readonly />
            </div>
            <div class="form-group mt-2">
                <label class="control-label">Category</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories" disabled>
                    <option>--Select Category--</option>
                </select>
            </div>
            <div class="form-group mt-2">
                <label class="control-label">Platform</label>
                <select asp-for="PlatformId" class="form-control" asp-items="ViewBag.Platforms" disabled>
                    <option>--Select Platform--</option>
                </select>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </form>
</div>
