@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Edit";
}
<h1>Edit</h1>

<h4>Role</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            @if (ViewBag.Users != null && ViewBag.Users.Count > 0)
            {
                <div class="form-group mt-2">
                    <p>User in this role</p>
                    <ul>
                        @foreach (ApplicationUser user in ViewBag.Users)
                        {
                            <li>@user.Email</li>
                        }
                    </ul>
                </div>
            }
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>